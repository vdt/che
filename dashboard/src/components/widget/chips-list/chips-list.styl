che-chips-list md-chips.che-chips-list
  display: block
  margin 0
  padding 0
  box-shadow none
  border 1px solid $list-separator-color

  .md-chip,
  .md-chip-input-container
    height 18px
    line-height 18px
    display inline-block

    *
      display inherit
      height inherit !important
      line-height inherit !important

  .md-chip-input-container
    margin 5px !important
    font-size 13px

  md-chips-wrap.md-chips
    margin 0
    padding 5px
    box-shadow none

  .md-chip.md-focused .tag-text
    border-color $che-medium-blue-color
    text-transform uppercase

  .md-chip
    background-color $che-medium-blue-color
    border-radius 3px
    padding 0 !important
    font-weight bold
    font-size 11px
    margin 5px

    .md-chip-remove
      width 18px

      md-icon
        visibility hidden

    md-chip-template div
      display inline-block
      color $white-color

    md-chip-template .tag-text
      border none
      border-radius 3px
      padding 0 25px 0 11px

    md-chip-template .tag-btn
      position absolute
      border-left 1px solid $white-color
      font-size 14px
      padding 0 3px
      top 0
      right 0

      .fa
        position relative
        bottom 1px

  // readonly
  &[readonly] .md-chip
    background-color transparent !important
    border 1px solid darken($che-white-color, 9%)

    md-chip-template div
      color $default-color !important

    md-chip-template
      .tag-text
        padding 0 11px 0 11px

      .tag-btn
        display none

